            url: url,
            data: {
                'name': name,
                'title': title,
                'text': text
            },
            dataType: 'json',
            method: 'put'

        }).done(function() {
           return true;
        }); 
    
}

</script>

    <table id='allposts'>
        <thead>
            <tr>
            <td>Date</td>
            <td style="width: 200px">Author</td>
            <td>Title</td>
            <td>Brief</td>
            <td style="width: 70px"> </td>
            </tr>
        </thead>
        
        <tbody>
        {% for e in entities %}
        <tr id="delpost{{ e.id }}">
        <td>{{ e.created }}</td>
        <td>{{ e.author }}</td>
        <td>{{ e.title }}</td>
        <td>{{ e.shortText }}</td>
        <td valign="top">
            <img src="https://cdn2.iconfinder.com/data/icons/flat-ui-icons-24-px/24/new-24-512.png" title="Edit" style="width: 15px; cursor: pointer;" onClick="updatePost({{ e.id }})" /> &nbsp;&nbsp;&nbsp;
            <img src="https://image.flaticon.com/icons/svg/121/121116.svg" title="Delete" style="width: 15px; cursor: pointer;" onClick="deletePost({{ e.id }})" />
            
            
        </td>
        </tr>
        {% endfor%}
        </tbody>
    </table>
        
